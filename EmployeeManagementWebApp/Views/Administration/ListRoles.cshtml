@model IEnumerable<IdentityRole>


@{
    ViewBag.Title = "All Roles";
}

<h1>All Roles</h1>
<div>
    <a class="btn btn-info" style="width:auto"
       asp-controller="Administration" asp-action="CreateRole">Add new role</a>
</div>
<hr />
@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title">
                  Role ID: @role.Id
                </h5>
            </div>
            <div class="card-body">                
                <h1 class="card-title">
                    @role.Name
                </h1>
            </div>
            <div class="card-footer">
                <a asp-controller="Administration" asp-action="EditRole" 
                   asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <a asp-controller="Administration" asp-action="DeleteRole" 
                   asp-route-id="@role.Id"class="btn btn-danger">Delete</a>
            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            "No Roles to display"
        </div>
        <div>
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-info" style="width:auto"
               asp-controller="Administration" asp-action="CreateRole">Create Role</a>
        </div>
    </div>

}