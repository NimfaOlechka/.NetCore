@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}

<h1>@ViewBag.Title</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Save changes</button>
            <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">
                Users in this role
            </h4>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id"
               asp-route-id="" class="btn btn-primary" style="width:auto">Add or remove Users</a>            
        </div>
    </div>
</form>